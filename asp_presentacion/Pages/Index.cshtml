@page
@model IndexModel
@{
    ViewData["Title"] = "RetroBusters - Inicio";
}

@if (!Model.EstaLogueado)
{
    <!-- Sección Login Mejorada -->
    <div class="login-container">
        <div class="login-overlay">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card login-card animate__animated animate__zoomIn">
                            <div class="card-header bg-retro">
                                <h3 class="text-center mt-3 text-black">Acceso al Sistema</h3>
                            </div>
                            <div class="card-body">
                                <form method="post" class="login-box">
                                    <div class="form-group">
                                        <label class="retro-label">Usuario:</label>
                                        <input asp-for="Email" class="form-control retro-input" placeholder="Tu email...">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="retro-label">Contraseña:</label>
                                        <input type="password" asp-for="Contrasena" class="form-control retro-input" placeholder="Tu contraseña...">
                                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                    {
                                        <div class="alert alert-danger retro-alert">@Model.ErrorMessage</div>
                                    }

                                    <div class="btn-group d-flex justify-content-between mt-4">
                                        <button type="submit" asp-page-handler="BtClean" class="btn btn-retro-secondary">
                                            <i class="fas fa-eraser me-2"></i>Limpiar
                                        </button>
                                        <button type="submit" asp-page-handler="BtEnter" class="btn btn-retro-primary">
                                            <i class="fas fa-sign-in-alt me-2"></i>Entrar
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Sección Hero con Efecto VHS -->
    <div class="retro-hero">
        <div class="vhs-overlay"></div>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 text-center hero-content">
                    <h1 class="retro-title animate__animated animate__fadeInDown">
                        <span class="blink">▶</span> BIENVENIDO A RETROBUSTERS
                    </h1>
                    <div class="retro-tv-effect">
                        <div class="scanlines"></div>
                        <div class="content-wrapper">
                            <p class="lead retro-subtitle">
                                Tu portal al cine retro<br>
                                <span class="typed-text" data-typed-items="Películas Clásicas, Snacks Retro, Consolas Vintage, Experiencia 90's"></span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Servicios -->
    <div class="retro-services">
        <div class="container">
            <div class="row g-4">
                
                <!-- Películas -->
                <div class="col-md-4">
                    <div class="service-card movie-rental">
                        <div class="film-strip"></div>
                        <div class="card-body">
                            <i class="fas fa-film"></i>
                            <h3>Catálogo de Películas</h3>
                            <p>Desde clásicos de los 80s hasta éxitos de los 2000s</p>
                            <ul class="retro-list">
                                <li>VHS y DVD</li>
                                <li>Ediciones Especiales</li>
                                <li>Colecciones Temáticas</li>
                            </ul>
                            <div class="console-carousel">
                                <img src="/img/movie-icon-15142.png"
                                     alt="movies"
                                     style="max-width: 100%; height: auto">
                            </div>
                            <a class="btn-retro" asp-page="/Ventanas/Peliculas">
                                Explorar Catálogo <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Snacks -->
                <div class="col-md-4">
                    <div class="service-card snack-box">
                        <div class="card-body">
                            <i class="fas fa-popcorn"></i>
                            <h3>Combo Snacks Retro</h3>
                            <p>La auténtica experiencia cinematográfica</p>
                            <div class="console-carousel">
                                <img src="/img/snacks.png"
                                     alt="snacks"
                                     style="max-width: 100%; height: auto">
                            </div>
                            <a class="btn-retro" asp-page="/Ventanas/Reservas_Snacks">
                                Personaliza tu combo <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Consolas -->
                <div class="col-md-4">
                    <div class="service-card console-rental">
                        <div class="pixel-overlay"></div>
                        <div class="card-body">
                            <i class="fas fa-gamepad"></i>
                            <h3>Arcade Experience</h3>
                            <p>Consolas clásicas para revivir tu infancia</p>
                            <div class="console-carousel">
                                <img src="/img/sony_playstation_PNG17542.png"
                                     alt="PS1"
                                     style="max-width: 100%; height: auto">
                            </div>
                            <a class="btn-retro" asp-page="/Ventanas/Consolas">
                                Ver consolas <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección Nostalgia -->
    <div class="retro-cta">
        <div class="container">
            <div class="row">
                <div class="col-md-8 mx-auto text-center">
                    <div class="vhs-box">
                        <h2 class="glitch">¿Listo para el viaje?</h2>
                        <p class="retro-text">¡Renta 3 películas y obtén un combo snack gratis!</p>
                        <a class="btn-retro" asp-page="/Ventanas/Reservas">
                            Empezar ahora <i class="fas fa-ticket-alt"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cerrar Sesión -->
    <div class="text-center mt-5">
        <form method="post">
            <button type="submit" asp-page-handler="BtClose" class="btn-retro-logout">
                <i class="fas fa-sign-out-alt me-2"></i> Finalizar Sesión
            </button>
        </form>
    </div>
}

<style>
    /* Efecto VHS mejorado */
    .vhs-overlay {
        position: fixed;
        width: 100%;
        height: 100%;
        background:
            repeating-linear-gradient(0deg,
            rgba(255, 0, 0, 0.1) 0px,
            rgba(255, 0, 0, 0.1) 2px,
            transparent 3px,
            transparent 5px),
            repeating-linear-gradient(90deg,
            rgba(0, 255, 0, 0.1) 0px,
            rgba(0, 255, 0, 0.1) 2px,
            transparent 3px,
            transparent 5px),
            repeating-linear-gradient(180deg,
            rgba(0, 0, 255, 0.1) 0px,
            rgba(0, 0, 255, 0.1) 2px,
            transparent 3px,
            transparent 5px);
        pointer-events: none;
        z-index: 999;
        mix-blend-mode: screen;
        animation: vhsEffect 1s infinite;
    }

    .retro-hero {
        background: linear-gradient(
            45deg,
            #002f6c,  /* Azul corporativo */
            #001a3d    /* Tono más oscuro para contraste */
        );
        min-height: 70vh;
        position: relative;
        padding: 4rem 0;
        color: #fff;
        border-bottom: 3px solid #ffd700; /* Borde dorado */
    }

    /* Efecto de líneas de escaneo CRT */
    .retro-hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(
            transparent 0px,
            rgba(0, 0, 0, 0.1) 3px,
            transparent 6px
        );
        animation: scan 5s linear infinite;
        pointer-events: none;
    }

    .retro-title {
        font-family: 'Press Start 2P', cursive;
        font-size: 2.5rem;
        text-shadow: 3px 3px 0 #000;
        margin-bottom: 2rem;
        color: #ffd700; /* Texto dorado */
        position: relative;
        z-index: 2;
    }

    .retro-tv-effect {
        background: rgba(0, 0, 0, 0.8);
        border: 3px solid #666;
        padding: 2rem;
        margin: 2rem 0;
        transform: perspective(500px) rotateX(5deg);
        box-shadow: 0 0 20px rgba(0, 47, 108, 0.5);
    }

    .service-card {
        background: rgba(0, 0, 0, 0.9);
        border: 2px solid #ffd700;
        padding: 2rem;
        margin: 1rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(255, 215, 0, 0.2);
    }

    /* Efecto de ruido analógico */
    .service-card::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('data:image/png;base64,');
        opacity: 0.1;
        pointer-events: none;
    }

    /* Resto de estilos permanecen igual */
    @@keyframes vhsEffect {
        0% { opacity: 0.9; }
        50% { opacity: 0.7; }
        100% { opacity: 0.9; }
    }

    @@keyframes scan {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(100%); }
    }

    /* Contenedor principal */
    .console-carousel {
        display: flex;
        gap: 1.5rem;
        padding: 1rem 0;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
    }

    /* Cada imagen individual */
    .console-carousel > img {
        scroll-snap-align: start;
        width: 150px !important; /* Fuerza el ancho */
        height: 100px !important; /* Fuerza el alto */
        object-fit: contain; /* Mantiene proporciones */
        flex-shrink: 0; /* Evita que se encojan */
        filter: grayscale(100%) contrast(120%);
        transition: all 0.3s ease;
    }

    /* Efecto hover */
    .console-carousel > img:hover {
        filter: none;
        transform: scale(1.1);
    }
</style>