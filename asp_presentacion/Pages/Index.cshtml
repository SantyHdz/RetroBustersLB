@page
@model IndexModel
@{
    ViewData["Title"] = "RetroBusters - Gestión de Reservas";
}

@if (!Model.EstaLogueado)
{
    <!-- Sección Login Profesional -->
    <div class="login-container">
        <div class="login-overlay">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-5 col-lg-4">
                        <div class="card login-card shadow animate__animated animate__fadeInDown">
                            <div class="card-header bg-primary text-white text-center">
                                <h3 class="mb-0">Acceso al Sistema</h3>
                            </div>
                            <div class="card-body">
                                <form method="post" class="login-box">
                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label">Usuario (Email):</label>
                                        <input asp-for="Email" class="form-control" placeholder="Tu email..." />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Contrasena" class="form-label">Contraseña:</label>
                                        <input asp-for="Contrasena" type="password" class="form-control" placeholder="Tu contraseña..." />
                                        <span asp-validation-for="Contrasena" class="text-danger small"></span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                    {
                                        <div class="alert alert-danger small">@Model.ErrorMessage</div>
                                    }

                                    <div class="d-flex justify-content-between">
                                        <button type="submit" asp-page-handler="BtClean" class="btn btn-outline-secondary">
                                            <i class="fas fa-eraser me-1"></i> Limpiar
                                        </button>
                                        <button type="submit" asp-page-handler="BtEnter" class="btn btn-primary">
                                            <i class="fas fa-sign-in-alt me-1"></i> Entrar
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Dashboard Principal -->
    <div class="dashboard-hero bg-primary text-white py-5 mb-4">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">Gestión de Reservas RetroBusters</h1>
            <p class="lead">Administra tus reservas de películas, snacks y consolas con facilidad y estilo.</p>
            <img src="https://images.unsplash.com/photo-1695606452750-bd992e903053?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 alt="Gestión de reservas" class="img-fluid rounded shadow mt-4" style="max-height:300px; object-fit:cover;" />
        </div>
    </div>

    <!-- Tarjetas de Sección -->
    <div class="container mb-5">
        <div class="row g-4">
            <!-- Películas -->
            <div class="col-md-4">
                <div class="card shadow h-100 border-primary">
                    <img src="https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?auto=format&fit=crop&w=600&q=80" class="card-img-top" alt="Catálogo de Películas" />
                    <div class="card-body">
                        <h5 class="card-title text-primary">Catálogo de Películas</h5>
                        <p class="card-text">Clásicos y éxitos para toda la familia. Reserva VHS, DVD y ediciones especiales.</p>
                    </div>
                </div>
            </div>

            <!-- Snacks -->
            <div class="col-md-4">
                <div class="card shadow h-100 border-warning">
                    <img src="https://images.unsplash.com/photo-1621939514649-280e2ee25f60?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Combo Snacks Retro" />
                    <div class="card-body">
                        <h5 class="card-title text-warning">Combo Snacks Retro</h5>
                        <p class="card-text">Personaliza tu combo para disfrutar la experiencia completa en casa.</p>
                    </div>
                </div>
            </div>

            <!-- Consolas -->
            <div class="col-md-4">
                <div class="card shadow h-100 border-success">
                    <img src="https://images.unsplash.com/photo-1511512578047-dfb367046420?auto=format&fit=crop&w=600&q=80" class="card-img-top" alt="Consolas clásicas" />
                    <div class="card-body">
                        <h5 class="card-title text-success">Arcade Experience</h5>
                        <p class="card-text">Reserva consolas clásicas para revivir tus mejores momentos gaming.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Llamado a la acción -->
    <div class="cta-section bg-light py-5 text-center mb-4">
        <div class="container">
            <h2 class="fw-bold mb-3">¿Listo para comenzar?</h2>
            <p class="mb-4">Renta 3 películas y obtén un combo snack gratis. ¡Aprovecha esta oferta exclusiva!</p>
            <a asp-page="/Ventanas/Reservas" class="btn btn-primary btn-lg">
                Empezar ahora <i class="fas fa-ticket-alt ms-1"></i>
            </a>
        </div>
    </div>

    <!-- Botón de Cerrar Sesión -->
    <div class="container text-center mb-5">
        <form method="post">
            <button type="submit" asp-page-handler="BtClose" class="btn btn-danger btn-lg">
                <i class="fas fa-sign-out-alt me-2"></i> Finalizar Sesión
            </button>
        </form>
    </div>
}

<style>
    /* Login */
    .login-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #001a3d, #002f6c);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }
    .login-overlay {
        width: 100%;
        max-width: 3000px;
    }

    .dashboard-hero {
        background: linear-gradient(135deg, #002f6c, #001a3d);
        color: #ffd700;
        border-bottom: 6px solid #ffd700; /* un poco más grueso */
        font-family: 'Poppins', sans-serif;

        /* Agregar sombra intensa y efecto de iluminación */
        box-shadow: 0 0 30px 8px rgba(255, 215, 0, 0.7);
        position: relative;
        overflow: hidden;
    }

    /* Texto más grande y con sombra más definida */
    .dashboard-hero h1 {
        font-size: 3.5rem; /* más grande */
    }

    .dashboard-hero p {
        font-size: 1.5rem;
        font-weight: 600;
        text-shadow: 1px 1px 5px rgba(0,0,0,0.9);
    }

    /* Añadir un ligero brillo animado en el fondo (opcional y muy llamativo) */
    .dashboard-hero::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle at center, rgba(255, 255, 255, 0.15), transparent 70%);
        animation: shine 6s linear infinite;
        pointer-events: none;
    }

    @@keyframes shine {
        0% { transform: rotate(0deg) translateX(0); }
        100% { transform: rotate(360deg) translateX(0); }
    }


    /* Cards */
    .card {
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 25px rgba(0,0,0,0.3);
    }
    .card-img-top {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        height: 200px;
        object-fit: cover;
    }
    .card-title {
        font-weight: 700;
    }

    /* CTA */
    .cta-section {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgb(0 47 108 / 0.3);
    }

    /* Botón cerrar sesión */
    .btn-danger {
        background-color: #b22222;
        border-color: #b22222;
    }
    .btn-danger:hover {
        background-color: #800000;
        border-color: #800000;
    }
</style>